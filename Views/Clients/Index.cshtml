@model IEnumerable<MyShop.Models.Client>

@{
    ViewBag.Title = "Liste des Clients";
    Layout = "_Layout";
}

<div class="content-wrapper rtl">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <h3 class="page-title text-start">LISTE DES CLIENTS</h3>
        <a href="@Url.Action("Save", "Clients")" class="btn btn-primary text-end">
            <i class="bi bi-plus-circle me-1"></i> Ajouter un Client
        </a>
    </div>

    <div class="table-responsive ltr">
        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>NOM</th>
                    <th>MOBILE</th>
                    <th>EMAIL</th>
                    <th>ADRESSE</th>
                    <th>ACTIVITE</th>
                    <th class="text-center">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Nom</td>
                        <td>@client.Mobile</td>
                        <td>@client.Email</td>
                        <td>@client.Adresse</td>
                        <td>@client.Activite</td>
                        <td class="text-center">
                            <a href="@Url.Action("Save", "Clients", new { id = client.Id })" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Clients", new { id = client.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Voulez-vous vraiment supprimer ce client ?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f7f9fc;
            direction: rtl;
        }

        .content-wrapper {
            max-width: 1200px;
            margin: 50px auto;
            background: #fff;
            border-radius: 18px;
            padding: 30px 40px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
        }

        .page-title {
            font-weight: 600;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn {
            border-radius: 10px;
        }

        .rtl .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .ltr {
            direction: ltr;
        }
    </style>
}