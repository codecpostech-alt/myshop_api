@{
    ViewBag.Title = "J'ai oublié le mot de passe";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(135deg, #007bff, #00c6ff);">
    <div class="card shadow-lg border-0 rounded-4" style="width: 420px;">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <img src="/images/logo.png" alt="CODEC POS" style="width: 80px; height: 80px; border-radius: 50%;">
                <h4 class="mt-3 fw-bold text-primary">🔑 نسيت كلمة المرور</h4>
                <p class="text-muted mb-0">Entrez votre e-mail pour récupérer votre mot de passe</p>
                <p class="text-muted">أدخل بريدك الإلكتروني لاسترجاع كلمة المرور</p>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center rounded-3">@TempData["Message"]</div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div class="form-group mb-3">
                    <label for="email" class="fw-semibold">📧 البريد الإلكتروني / E-mail</label>
                    <input type="email" name="email" class="form-control rounded-3 shadow-sm" required placeholder="exemple@gmail.com" />
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-3 py-2 fw-bold shadow-sm">
                    📩 استرجاع كلمة المرور / Récupérer le mot de passe
                </button>
            </form>

            <hr class="my-4" />

            <div class="text-center">
                <a asp-action="Login" class="text-decoration-none text-secondary fw-semibold">
                    🔙 العودة إلى تسجيل الدخول / Retour à la connexion
                </a>
            </div>
        </div>

        <div class="card-footer text-center text-muted small py-2">
            © 2025 CODEC POS — Tous droits réservés / جميع الحقوق محفوظة
        </div>
    </div>
</div>