                    </a>
                </div>
            </div>
            <a href="#"><i class="bi bi-check2-circle"></i><span> Confirmation</span></a>
            <a asp-controller="Livraison" asp-action="Livraison">
                <i class="bi bi-truck"></i><span> Livraison</span>
            </a>
            <a href="#"><i class="bi bi-gear"></i><span> Paramètres</span></a>
            <a href="#"><i class="bi bi-credit-card"></i><span> Abonnement</span></a>
        </div>

        <div class="sidebar-bottom">
            <a href="~/Account/Login" class="text-dark text-decoration-none" id="Connexion">
                <i class="bi bi-box-arrow-right"></i><span> Déconnexion</span>
            </a>
        </div>
    </div>

    <!-- Main content -->
    <div class="main-content flex-grow-1">
        <div class="dashboard-header">
            <h3>Tableau de bord</h3>
            @using Microsoft.AspNetCore.Http
