                <a href="#" class="dropdown-toggle mt-2">
                    <i class="bi bi-cart-check"></i><span> Ventes</span>
                    <i class="bi bi-chevron-down ms-auto arrow"></i>
                </a>
                <div class="submenu">
                    <a asp-controller="Vente" asp-action="Index">Vente</a>
