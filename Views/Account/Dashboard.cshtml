                </div>
            </div>
            <!-- GESTION PAIEMENTS -->
            <div class="sidebar-item">
                <a href="#" class="dropdown-toggle mt-2">
                    <i class="bi bi-wallet2"></i><span> Gestion Paie</span>
                    <i class="bi bi-chevron-down ms-auto arrow"></i>
                </a>
                <div class="submenu">
                    <a asp-controller="Employees" asp-action="Index">
                        <i class="bi bi-person-badge me-2 text-primary"></i> Employés
                    </a>
                    <a asp-controller="Employees" asp-action="Save">
