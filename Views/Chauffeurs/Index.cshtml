@model IEnumerable<MyShop.Models.Chauffeur>

@{
    ViewData["Title"] = "Liste des Chauffeurs";
}

<div class="container py-4">

    <!-- 🔔 Alerts Messages -->
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">🚚 Liste des Chauffeurs</h2>
            <p class="text-muted">Gestion complète des chauffeurs</p>
        </div>

        <a class="btn btn-primary btn-lg shadow-sm" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Ajouter Chauffeur
        </a>
    </div>

    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Téléphone</th>
                            <th>Permis</th>
                            <th>Camion</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nom</td>
                                <td>@item.Prenom</td>
                                <td>@item.Telephone</td>

                                <td>
                                    <span class="badge bg-info text-dark">
                                        @item.NumeroPermis
                                    </span>
                                    <br />
                                    <small class="text-muted">
                                        Exp: @(item.ExpirationPermis?.ToString("dd/MM/yyyy") ?? "—")
                                    </small>
                                </td>

                                <td>@item.Camion</td>

                                <td>
                                    @if (item.Statut == "Actif")
                                    {
                                        <span class="badge bg-success">Actif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactif</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary me-1" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>

</div>

<!-- Optional: Hover effect -->
<style>
    .table-hover tbody tr:hover {
        background-color: #f1f5ff;
        transition: 0.2s;
    }

    .card {
        border-radius: 1.2rem !important;
    }
</style>