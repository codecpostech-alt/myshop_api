@model MyShop.Models.StoreSettings

<div class="container mt-4" style="direction: ltr; text-align: left;">
    <h2 class="mb-4">⚙️ Paramètres du magasin</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <form method="post" action="/Settings/Save" class="card p-4 shadow">

        <div class="mb-3">
            <label class="form-label">Nom du magasin</label>
            <input type="text" name="StoreName" class="form-control" value="@Model.StoreName" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Type d'activité commerciale</label>
            <input type="text" name="BusinessType" class="form-control" value="@Model.BusinessType" />
        </div>

        <div class="mb-3">
            <label class="form-label">Numéro du registre de commerce</label>
            <input type="text" name="CommercialRegister" class="form-control" value="@Model.CommercialRegister" />
        </div>

        <div class="mb-3">
            <label class="form-label">Numéro d'identification fiscale (NIF)</label>
            <input type="text" name="TaxNumber" class="form-control" value="@Model.TaxNumber" />
        </div>

        <div class="mb-3">
            <label class="form-label">Relevé d'identité bancaire (RIB)</label>
            <input type="text" name="BankAccount" class="form-control" value="@Model.BankAccount" />
        </div>

        <div class="mb-3">
            <label class="form-label">Adresse</label>
            <input type="text" name="Address" class="form-control" value="@Model.Address" />
        </div>

        <div class="mb-3">
            <label class="form-label">Numéro de téléphone</label>
            <input type="text" name="Phone" class="form-control" value="@Model.Phone" />
        </div>

        <div class="mb-3">
            <label class="form-label">Taux de TVA par défaut (%)</label>
            <input type="number" step="0.01" name="DefaultTax" class="form-control" value="@Model.DefaultTax" />
        </div>

        <button class="btn btn-primary w-100">💾 Enregistrer</button>
    </form>
</div>