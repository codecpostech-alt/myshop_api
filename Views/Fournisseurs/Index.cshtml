@model IEnumerable<MyShop.Models.Fournisseur>

@{
    ViewBag.Title = "Liste des Fournisseurs";
    Layout = "_Layout";
}

<div class="content-wrapper rtl">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <h3 class="page-title text-start">LISTE DES FOURNISSEURS</h3>
        <a href="@Url.Action("Save", "Fournisseurs")" class="btn btn-gradient text-end">
            <i class="bi bi-plus-circle me-1"></i> Ajouter un Fournisseur
        </a>
    </div>

    <div class="table-responsive ltr">
        <table class="table table-striped align-middle table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>NOM</th>
                    <th>MOBILE</th>
                    <th>EMAIL</th>
                    <th>ADRESSE</th>
                    <th>ACTIVITE</th>
                    <th class="text-center">SOLDE</th>
                    <th class="text-center">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fournisseur in Model)
                {
                    <tr>
                        <td>@fournisseur.Nom</td>
                        <td>@fournisseur.Mobile</td>
                        <td>@fournisseur.Email</td>
                        <td>@fournisseur.Adresse</td>
                        <td>@fournisseur.Activite</td>
                        <td class="text-center">@fournisseur.Solde?.ToString("N2")</td>
                        <td class="text-center">
                            <a href="@Url.Action("Save", "Fournisseurs", new { id = fournisseur.Id })" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Fournisseurs", new { id = fournisseur.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Voulez-vous vraiment supprimer ce fournisseur ?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f7f9fc;
            direction: rtl;
        }

        .content-wrapper {
            max-width: 1200px;
            margin: 50px auto;
            background: #fff;
            border-radius: 18px;
            padding: 30px 40px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
            transition: 0.3s;
        }

            .content-wrapper:hover {
                transform: translateY(-2px);
                box-shadow: 0 25px 50px rgba(0,0,0,0.15);
            }

        .page-title {
            font-weight: 600;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0,123,255,0.1);
        }

        .btn {
            border-radius: 10px;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #007bff, #00b4d8);
            color: #fff;
            font-weight: 500;
        }

        .rtl .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .ltr {
            direction: ltr;
        }
    </style>
}