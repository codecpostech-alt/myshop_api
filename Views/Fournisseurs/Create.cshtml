@model MyShop.Models.Fournisseur

@{
    ViewBag.Title = Model.Id == 0 ? "Ajouter un Fournisseur" : "Modifier le Fournisseur";
    Layout = "_Layout";
}

<div class="content-wrapper rtl">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <a href="@Url.Action("Index", "Fournisseurs")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>

        <h3 class="page-title">@((Model.Id == 0) ? "AJOUTER UN FOURNISSEUR" : "MODIFIER LE FOURNISSEUR")</h3>
    </div>

    <form asp-controller="Fournisseurs" asp-action="Save" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger mb-4"></div>

        <!-- Nom fournisseur obligatoire -->
        <div class="mb-3">
            <label for="Nom" class="form-label">NOM FOURNISSEUR <span class="text-danger">*</span></label>
            <input asp-for="Nom" class="form-control ltr-text" placeholder="Ex : Fournisseur XYZ" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <!-- Mobile -->
        <div class="mb-3">
            <label for="Mobile" class="form-label">Mobile</label>
            <input asp-for="Mobile" class="form-control ltr-text" placeholder="Ex : 0555xxxxxx" />
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control ltr-text" placeholder="Ex : fournisseur@email.com" />
        </div>

        <!-- Adresse -->
        <div class="mb-3">
            <label for="Adresse" class="form-label">Adresse</label>
            <input asp-for="Adresse" class="form-control ltr-text" placeholder="Ex : Alger, Algérie" />
        </div>

        <!-- Activité -->
        <div class="mb-3">
            <label for="Activite" class="form-label">Activité</label>
            <input asp-for="Activite" class="form-control ltr-text" placeholder="Ex : Commerce" />
        </div>

        <!-- Rc, Ai, Nif, Nis -->
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="Rc" class="form-label">RC</label>
                <input asp-for="Rc" class="form-control ltr-text" />
            </div>
            <div class="col-md-3 mb-3">
                <label for="Ai" class="form-label">AI</label>
                <input asp-for="Ai" class="form-control ltr-text" />
            </div>
            <div class="col-md-3 mb-3">
                <label for="Nif" class="form-label">NIF</label>
                <input asp-for="Nif" class="form-control ltr-text" />
            </div>
            <div class="col-md-3 mb-3">
                <label for="Nis" class="form-label">NIS</label>
                <input asp-for="Nis" class="form-control ltr-text" />
            </div>
        </div>

        <!-- Solde facultatif -->
        <div class="mb-3">
            <label for="Solde" class="form-label">Solde</label>
            <input asp-for="Solde" class="form-control ltr-text" placeholder="Solde initial (facultatif)" />
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="@Url.Action("Index", "Fournisseurs")" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-x-circle me-1"></i> Annuler
            </a>
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-save me-1"></i> @(Model.Id == 0 ? "Ajouter" : "Modifier")
            </button>
        </div>
    </form>

    <div class="footer-note mt-5">
        © @DateTime.Now.Year - <strong>CODEC SHOP</strong> | Gestion des Fournisseurs
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #f0f4f8, #d9e8fb);
            font-family: 'Poppins', sans-serif;
            direction: rtl;
            text-align: right;
        }

        .content-wrapper {
            max-width: 850px;
            margin: 50px auto;
            background: #fff;
            border-radius: 18px;
            padding: 40px 50px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
        }

        label.form-label {
            display: block;
            text-align: left;
            font-weight: 500;
            margin-bottom: 6px;
        }

        .ltr-text {
            direction: ltr;
            text-align: left;
        }

        .form-control {
            border-radius: 12px;
            padding: 12px 14px;
            border: 1px solid #ced4da;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
            }

        .btn-primary {
            background: linear-gradient(90deg, #007bff, #00b4d8);
            border: none;
            border-radius: 12px;
            font-weight: 600;
            padding: 12px 25px;
        }

        .btn-outline-secondary {
            border-radius: 12px;
            padding: 12px 25px;
            font-weight: 500;
        }

        .footer-note {
            text-align: center;
            color: #666;
            margin-top: 35px;
            font-weight: 500;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}